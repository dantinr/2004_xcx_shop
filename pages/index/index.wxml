<view class="page-box">

  <view class="swiper-box">

    <!-- 轮播图 开始 -->
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}"
      circular="true">
      <block wx:for="{{banners}}" wx:key="*this">
        <swiper-item>
          <image src="{{item}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <!-- 轮播图结束 -->

  </view>

  <!-- 文字导航 开始 -->  
  <view class="nav-box">
