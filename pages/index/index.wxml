          <view class="item">FFF</view>
          <view class="item">GGG</view>
          <view class="item">HHH</view>
          <view class="item">JJJ</view>
          <view class="item">KKK</view>
          <view class="item">LLL</view>
          <view class="item">MMM</view>
          <view class="item">NNN</view>
          <view class="item">OOO</view>
      </view>
    </scroll-view>
  </view>
  <!-- 文字导航结束 -->


  <!-- 列表开始 -->
  <view class="goods-list">
    <view class="item">
      
      <view class="img">
        <image src="https://img12.360buyimg.com/n1/s300x300_jfs/t1/108139/3/12599/414459/5e98519aE738bb116/7e38efd181b9704c.png!q70.webp"></image>
      </view>

      <view class="content">
        <view class="title">水电费来看就乐山大佛框架隆盛科技的逢狼时刻杰弗里斯框架分类树肯德基发离开家水电费</view>
