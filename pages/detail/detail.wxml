<!--pages/detail/detail.wxml-->
<view class="page-box">

    <!-- 商品相册 开始 -->
    <view class="swipper-box">
      <swiper indicator-dots="{{indicatorDots}}" bindchange="swipperChange"
        autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        <block wx:for="{{goods.gallery}}" wx:key="*this">
          <swiper-item>
            <image src="{{item}}"></image>
          </swiper-item>
        </block>
      </swiper>

      <view class="tips">
          <text>{{current+1}}/{{goods.gallery.length}}</text>
      </view>

    </view>



    <!-- 商品相册 结束 -->

    <!-- 商品信息 开始 -->
    <view class="goods-info">
        <text class="title">{{goods.goods_name}}</text>
        <text class="price">{{goods.shop_price}}</text>
    </view>
     <!-- 商品信息 结束 -->

    <view class="address"> </view>

    <!-- 商品描述信息 开始 -->
    <view class="detail-box"> </view>
    <!-- 商品描述信息 结束 -->

    <!-- 底部导航 开始 -->
    <view class="bottom-nav">
    <!-- 底部导航 结束 -->

    </view>
</view>

